option_settings:
  aws:elasticbeanstalk:application:environment:
    # App environment variables (add/remove as needed)
    PORT: "8000"
    VITE_API_BASE: "http://localhost:8000"
    OPENROUTER_API_KEY: ""
    GOOGLE_API_KEY: ""
    FIREBASE_PROJECT_ID: ""
    FIREBASE_CLIENT_EMAIL: ""
    FIREBASE_PRIVATE_KEY: ""

  aws:elasticbeanstalk:container:docker:
    # EB will pass PORT to the container; our CMD honors ${PORT}
    # Explicitly set to 8000 for clarity
    ContainerPort: "8000"

  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
