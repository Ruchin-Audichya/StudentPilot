# For single Docker container platform, EB uses a default reverse proxy.
# This ensures health checks target /health on port 8000.
files:
  "/etc/nginx/conf.d/healthcheck.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /health {
        proxy_pass http://127.0.0.1:8000/health;
      }
container_commands:
  01_reload_nginx:
    command: "service nginx reload || true"
